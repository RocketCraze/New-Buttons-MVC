
@{
    ViewData["Title"] = "Index";
}


@model IEnumerable<Graduate_Project___Leon.Models.Profile>

<h1>Profiles</h1>
<a asp-controller="Profile" asp-action="CreateProfile"><button class="btn btn-primary pa-3" type="button">Add Profile</button></a>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Date of Birth</th>
        <th>Age</th>
        <th>Country</th>
        <th>City</th>
        <th>Edit/Delete</th>
    </tr>
    @foreach (var profile in Model)
    {
        <tr>
            <td>@profile.Name</td>
            <td>@profile.Surname</td>
            <td>@profile.DOB.Year/@profile.DOB.Month/@profile.DOB.Day</td>
            <td>@profile.Age</td>
            <td>@profile.Country</td>
            <td>@profile.City</td>
            <td><a asp-controller="Profile" asp-action="EditProfile" asp-route-id="@profile.ID">Edit / </a><a asp-controller="Profile" asp-action="DeleteProfile" asp-route-id="@profile.ID">Delete</a></td>
        </tr>
    }
</table>  